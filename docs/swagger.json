          "name": {
            "description": "Contact's name",
            "type": "string",
            "example": "Lider"
          },
          "phoneNumber": {
            "description": "Phone number",
            "type": "number",
            "example": 380000000003
          },
          "email": {
            "description": "Email",
            "type": "string",
            "example": "Lider.test@mail.com"
          },
          "isFavourite": {
            "description": "IsFavourite flag",
            "type": "boolean",
            "example": false
          },
          "contactType": {
            "description": "One of the contact`s type",
            "type": "string",
            "enum": [
              "work",
              "home",
              "personal"
